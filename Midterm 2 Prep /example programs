// Online C compiler to run C program online
#include <stdio.h>

int fibonacci(int n) {
    if (n<=1) {
        return 1;
    }
    
    return fibonacci(n-1) + fibonacci(n-2);
    
}

int factorial(int n) {
    
    if(n < 0){
        return -1;
    }
    
    // Recursive
    /*
    if(n <= 1) {
        return 1;
    }
    
    return n * factorial(n-1);
    */
    
    // OR
    
    int total = 1;
    for(int i = 2; i <= n; i++) {
        total *= i;
    }
    
    return total;
    
}

